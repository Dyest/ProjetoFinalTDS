<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> FoodDrop :: @ViewData["Title"] - </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/delivery.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

</head>
<body>
    <header class="HeaderTemplate">
        <nav class="navbar navbar-expand-md navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container">
                <ul class="navbar-nav flex-grow-1">
                <div class="col-12 col-md-4">
                    <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="./img/Logo.png" alt="FoodDropLogo" width="160" height="40"></a>
                </div>
                    <div class="col-12 col-md-4">
                        <form class="form-inline justify-content-center justify-content-md-start mb-sm-3 mb-md-0" action="/Index" method="get" id="formBusca">
                            <input type="text" name="q" id="q" placeholder="Nome do produto a buscar" class="form-control form-control-sm mr-sm-2" style="border-radius:15px;">
                            <button class="btn-search-header"><i class="bi bi-search"></i></button>
                            <input type="hidden" name="o" value="0" id="o"/>
                            <input type="hidden" name="p" value="1" id="p"/>
                        </form>
                    </div>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-light text-center border-top text-muted fixed-bottom p-2" >
        <div class="container">
            <div class="row">
                <div class=" col">
                    FoodDrop &copy; 2023 - Todos os direitos reservados - <a asp-area="" asp-page="/Privacy">Politicas de Privacidade</a>
                </div>
                <div class="col">
                    <a asp-area="" asp-page="/Admin">Administrar</a>
                </div>

            </div>

        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>